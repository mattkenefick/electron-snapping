# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_brace_style = 1TBS
insert_final_newline = true
indent_size = 4
indent_style = space
max_line_length = 80
quote_type = double
spaces_around_operators = true
trim_trailing_whitespace = true

[package.json]
indent_style = space
indent_size = 4

[*.md]